---
const response = await fetch(`http://localhost:4000/api/blogs`);
const data = await response.json();
const pages = data.pages;
const pagesArray = []; 

for (let i = 1; i <= pages; i++) {
    pagesArray.push(i)        
}
const { url = "http://localhost:4321/blog/page" } = Astro.props
---

<div class="pageslist"> 
    { 
    pagesArray.map((page) => (
    <a href={`${url}${page}`} class="page-button">{page}</a>   
    ))
    }
</div> 
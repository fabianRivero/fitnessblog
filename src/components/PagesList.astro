---
import { backendDomain } from "../scripts/urlDomains";

const response = await fetch(`${backendDomain}/api/blogs`);
const data = await response.json();
const pages = data.pages;
const pagesArray = []; 

for (let i = 1; i <= pages; i++) {
    pagesArray.push(i)        
}

---

<div class="pageslist"> 
    { 
    pagesArray.map((page) => (
    <a href={`blog/page${page}`} class="page-button">{page}</a>   
    ))
    }
</div> 
---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import SearcherBox from "../../../../components/SearcherBox.astro";
import SearchResults from "../../../../components/SearchResults.astro";
import EditPagesList from "../../../../components/EditPagesList.astro";
import CABEdit from "../../../../components/React/CABEdit.jsx";
import { fetchPages } from "../../../../scripts/api.js";

export async function getStaticPaths() {
    let response = await fetch('http://localhost:4000/api/blogs');
    let data = await response.json();
    const pages = data.pages;
    // const pages = await fetchPages();
    const pagesArray = []; 


    for (let i = 1; i <= pages; i++) {
        pagesArray.push(i)        
    }

    return pagesArray.map(( page ) => {
        return{
            params: {page: `page${page}`},
            props: {page},
            fallback: true
        };
    })
};

const { page } = Astro.props;
